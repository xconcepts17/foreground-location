<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 
    =============================================================================
    FOREGROUND LOCATION PLUGIN - ANDROID MANIFEST CONFIGURATION
    =============================================================================
    
    This is an example AndroidManifest.xml configuration for apps using the
    Foreground Location Plugin. Copy the relevant sections to your app's
    android/app/src/main/AndroidManifest.xml file.
    
    IMPORTANT: This example shows the complete configuration. You should merge
    these permissions and service declarations with your existing manifest.
    =============================================================================
    -->

    <!-- ========================================================================= -->
    <!-- REQUIRED PERMISSIONS FOR FOREGROUND LOCATION SERVICE -->
    <!-- ========================================================================= -->

    <!-- Basic location permissions - Required for all location access -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Foreground service permissions - Required for Android 9.0+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Location foreground service type - Required for Android 14+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- Background location permission - Required for Android 10+ background tracking -->
    <!-- 
    Note: This requires special approval from Google Play Console for most app categories.
    Make sure your app meets Google's background location policy requirements.
    -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Notification permission - Required for Android 13+ -->
    <!-- This is needed to show the persistent notification for the foreground service -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Internet and network permissions - Required for Google Play Services -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Optional: Wake lock permission for keeping service alive -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- ========================================================================= -->
    <!-- HARDWARE REQUIREMENTS -->
    <!-- ========================================================================= -->

    <!-- Specify that the app requires location hardware -->
    <uses-feature
        android:name="android.hardware.location"
        android:required="true" />
    
    <!-- GPS is required for high accuracy location -->
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="true" />

    <!-- Network location is required for assisted GPS -->
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <!-- ===================================================================== -->
        <!-- FOREGROUND LOCATION SERVICE DECLARATION -->
        <!-- ===================================================================== -->
        
        <!-- 
        This service declaration is REQUIRED for the foreground location plugin.
        Make sure to add this exactly as shown below.
        -->
        <service
            android:name="in.xconcepts.foreground.location.LocationForegroundService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"
            android:stopWithTask="false">
            
            <!-- Optional: Service metadata -->
            <meta-data
                android:name="description"
                android:value="Foreground service for continuous location tracking" />
        </service>

        <!-- ===================================================================== -->
        <!-- YOUR EXISTING APP COMPONENTS -->
        <!-- ===================================================================== -->

        <!-- Your main activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@style/LaunchTheme">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ===================================================================== -->
        <!-- OPTIONAL: CUSTOM NOTIFICATION ICON -->
        <!-- ===================================================================== -->

        <!-- 
        If you want to use a custom icon for the location notification,
        add your icon to android/app/src/main/res/drawable/ and reference it
        in the plugin configuration.
        -->

        <!-- ===================================================================== -->
        <!-- OPTIONAL: BATTERY OPTIMIZATION EXEMPTION -->
        <!-- ===================================================================== -->

        <!-- 
        For critical location tracking apps, you might want to request battery
        optimization exemption. However, use this sparingly as it affects user experience.
        -->
        <!-- 
        <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
        -->

        <!-- ===================================================================== -->
        <!-- GOOGLE PLAY SERVICES METADATA -->
        <!-- ===================================================================== -->

        <!-- Google Play Services version -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>

<!-- 
